// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // variável no .env
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  cpf       String       @unique
  nascimento DateTime
  email     String       @unique
  senha  String       // aqui você vai salvar a senha com hash (bcrypt, por exemplo)
  createdAt DateTime     @default(now())

  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])

  type        String   // "despesa" ou "receita"
  amount      Float
  category    String
  description String
  createdAt   DateTime @default(now())
}
